{
  "name": "sustainers",
  "version": "1.0.0",
  "private": true,
  "description": "The sustainoss.org source code",
  "scripts": {
    "critical": "critical \"_site/index.html\" --base _site --ignore \":root\" --ignore \"/url(/\" --ignore \"/Emoji/\">_includes/assets/_critical.scss",
    "autoprefixer": "postcss \"_sass/**/*.scss\" --use autoprefixer --syntax postcss-scss --no-map --replace",
    "build": "bundle exec jekyll build",
    "lint": "npm run stylelint",
    "stylelint": "stylelint --syntax scss \"_sass/**/*.scss\"",
    "test": "npm run lint",
    "serve": "bundle exec jekyll serve",
    "svgo": "svgo --config=_svgo.yml --input"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sustainers/website.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sustainers/website/issues"
  },
  "homepage": "https://github.com/sustainers/website#readme",
  "devDependencies": {
    "autoprefixer": "^9.1.3",
    "critical": "^1.3.4",
    "postcss-cli": "^6.0.0",
    "postcss-scss": "^2.0.0",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.3.0",
    "svgo": "^1.0.5"
  }
}
